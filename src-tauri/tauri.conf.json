{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Command Line Cookbook",
  "version": "0.1.0",
  "identifier": "com.chuckdries.clicookbook",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Command Line Cookbook",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "data/recipes/**/*": "data/recipes/",
      "data/docs/**/*": "data/docs/",
      "shell_integration/": "shell_integration/"
    },
    "macOS": {
      "signingIdentity": "775SDZM9Q3"
    }
  }
}
